case 2: { // ASL Lite Training con una sola letra o numero, esta es la parte mia y con mucho gusto me dejan saber si necesitan ayuda. Ya como veo dos partes con distintas variables esperare por ustedes. 
            string letra;
            cout << "\nEntre una sola letra o número (A-Z, 0-9): ";
            if (!getline(cin, letra) || letra.empty()) {
                cout << "Entrada vacía, regresando al menú.\n\n";
                break;
            }


            // Tomamos solo el primer carácter
            char c = letra[0];

            // Validamos que sea letra o dígito
            if (!isalpha(static_cast<unsigned char>(c)) &&//La funcion (!isalpha) permite que si el usuario ingresa algo que no sea una palabra, y junto con !isdigit si tampoco es un numero, entonces se ejecute  son ciertan es true y se ejecuta el mensaje debajo del if
                !isdigit(static_cast<unsigned char>(c))) {//y junto con !isdigit si tampoco es un numero, entonces ambas se vuelven ciertas y se ejecuta el mensaje debajo del if
                cout << "Solo se permiten letras (A-Z) o dígitos (0-9).\n\n";
                break;
            }

            // Creamos un string de longitud 1 para usar printWord
            string single(1, c);

            cout << "\n--- Letra en ASCII art ---\n\n";
            printWord(single, alphabet, maxLines);
            cout << "\n---------------------------\n\n";
            break;}
