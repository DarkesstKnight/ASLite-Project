#include <iostream>
#include <string>
#include <fstream>
#include <limits>
#include <cctype>//Lyran pondrá el archivo de ascilite que contienen las letras en lenguaje de señas
using namespace std;

void printWord(const string& word, string alphabet[][maxLines], int maxLines) {
int main()
{
    // Declaracion de variables
	int menuOption;
	string wordTranslate;


	do {                                                 // Do while para que el programa se repita.
        cout << "Bienvenidos a ASLite 0.1...\n";
	cout << "Escoga entre las siguientes opciones (1-4): ";
	cout << "\n1) ASLite Translate.";           // Usuario entra cualquiera palabra, y el output es la palabra en lenguaje de señas.
	cout << "\n2) ASLite Training.";           // Usuario entra cualquier letra o numero, y el output es la letra o numero en lenguaje de señas.
	cout << "\n3) ASLite guess game.";        // El programa le enseñara un signo en ascci art y el usuario tiene que desifrar que letra o numero es.
	cout << "\n4) Exit.\n";                  // Salida del programa.
	cin >> menuOption;
    cin.ignore(numeric_limits<streamsize>::max(), '\n');//Sino el programa salta la opcion de escribir las palabras en los case 1 y 2//Revisar

		if (menuOption >=1 && menuOption <=4) {        // Condicion para que el usuario nada mas pueda entrar del 1 al 4.
			switch(menuOption) {                      

			case 1: // ASLite Translate

				cout <<"\nEntre cualquier palabra: ";
				getline(cin, wordTranslate);

				break;

			case 2: {//Parte escrita por Bryan Nieves
            string letra;//Permite la entrada de caracteres de texto; favor de revisar si falta cin
            cout<<"Favor de entrar solo una letra o numero";
            cin>>letra;
    
            char c = letra[0];//Toma solo el primer carácter del string letra.

            // Validamos que sea letra o dígito
          if (!((c >= 'A' && c <= 'Z') ||//Excluye aquellos caracteres que no sean letras en mayúscula;
          (c >= 'a' && c <= 'z') ||//o en minúscula;
          (c >= '0' && c <= '9'))) {//o dígitos del 0 al 9.
    cout << "Solo se permiten letras (A-Z) o dígitos (0-9).\n\n";
    break;
}


            // Creamos un string de longitud 1 para usar printWord
            string single(1, c);

            cout << "\n--- Letra en ASCII art ---\n\n";
            printWord(single, alphabet, maxLines);
            cout << "\n---------------------------\n\n";
            break;}

			case 3: // ASLite guess game



				break;

			case 4: // Exit



				break;

			default:

				cout<< "Error en el input, vuelva a intentarlo.";

			}

		} else {

			cout << "Error en input, vuelva a intentarlo del (1-4).";

		}



	} while (menuOption !=4);


		return 0;
}
