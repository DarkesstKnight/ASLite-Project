#include <iostream>
#include <string>
#include <limits>
#include <fstream>
using namespace std;

int main()
{
    int menuOption;
    string palabra;
    do {

        cout << "Bienvenidos a ASLite 0.1!\n";
        cout << "Escoje entre las siguientes opciones (1-4): ";
        cout << "\n1) ASLite Translate.";
        cout << "\n2) ASLite Training.";
        cout << "\n3) ASLite guess game.";
        cout << "\n4) Exit.\n";
        cout << "Opci칩n: ";

        cin >> menuOption;

        // 游댮 VALIDAR LETRAS O ENTRADAS NO NUM칄RICAS
        if (cin.fail()) {
            cin.clear(); 
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << "Error: Solo se permiten n칰meros (1-4). Intenta nuevamente.\n\n";
            continue; 
        }

        if (menuOption >= 1 && menuOption <= 4) {

            switch (menuOption) {

            case 1:
                cout << "Entre cualquier palabra y se traducir치 a lenguaje de se침as: ";
                cin>>palabra;
                break;

            case 2:
                cout << "\n[M칩dulo Training pendiente de implementar]\n";
                break;

            case 3:
                cout << "\n[M칩dulo Guess Game pendiente de implementar]\n";
                break;

            case 4:
                cout << "\nSaliendo de ASLite...\n";
                break;
            }

        } else {
            cout << "Error: Debe escoger un n칰mero entre el 1 y el 4.\n";
        }

        cout << "\n\n";

    } while (menuOption != 4);

    return 0;
}
